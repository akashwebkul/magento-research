<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="contact_us_constom" resource="default" engine="innodb" comment="Contact Us Custom">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" padding="10" identity="true" comment="Entity Id"/>
        <column xsi:type="text" name="name" nullable="true" comment="name"/>
        <column xsi:type="text" name="email" nullable="true" comment="Email"/>
        <column xsi:type="text" name="telephone" nullable="true" comment="Pnone Number"/>
        <column xsi:type="text" name="comment" nullable="true" comment="Query"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" comment="Creation Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>